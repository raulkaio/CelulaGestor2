<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.raulkaio.celulagestor">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.LoginActivity"
            android:label="Gestor de células"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.PrincipalActivity"
            android:label="Gestor de células"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.CriaCelulaActivity"
            android:label="Cadastrar célula"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.CriaPessoaActivity"
            android:label="Cadastrar pessoa"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.RelatorioTodasPessoas"
            android:label="@string/title_activity_relatorio_todas_pessoas"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.RelatorioPessoasEncontro"
            android:label="@string/title_activity_relatorio_pessoas_encontro"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.RelatorioPessoasBatismo"
            android:label="@string/title_activity_relatorio_pessoas_batismo"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>